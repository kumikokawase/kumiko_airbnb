<div class="container">
    <div class = "row"> 
        <div class ="col-3 mt-4">
            
        </div>

        <div class = "col-9">
            <div class = "card mt-4">
                <div class = "card-header">
                    Photos 
                </div>
                <div class="card-body">
                    <div class = "container ">
                        <div class = "row">
                            <div class="col-6 mt-3">
                                <%= form_with(model: @photo, local: true) do |form| %>
                                    <div class="field">
                                        <%= form.label :main_image %>
                                        <%= form.file_field :main_image %>
                                    </div>

                                    <div class="field">
                                        <%= form.label :other_images %>
                                        <%= form.file_field :other_images, multiple: true %>
                                    </div>

                                    <div class="actions">
                                        <%= form.submit %>
                                    </div>
                                    <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>