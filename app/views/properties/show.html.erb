<div class="">
    <div class="container">
        <div class="row">
             <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-title text-center" style="margin-bottom: 20px;">
                    <h1 class="text-left"><%= @properties.title %></h1>
                </div>
            </div>

            <div id="carouselExampleIndicators" class="carousel slide col-md-8" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <%= image_tag 'property-9.jpg', class:"mx-auto", style: 'width:700px;' %><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/>
                </div>
                <div class="carousel-item">
                <%= image_tag 'property-8.jpg', class:"mx-auto", style: 'width:700px;' %><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/>
                </div>
                <div class="carousel-item">
                <%= image_tag 'property-10.jpg', class:"mx-auto", style: 'width:700px;' %><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            </div>

            <div class = "card col-md-4">
                <div class = "card-header">
                    Book
                </div>
                <div class="card-body">
                <% if current_user != @properties.user %>
                    <%= form_for([ @reservation ]) do |f| %>
                    <div class="form-row  text-center">
                        <div class="form-group col-md-6">
                            <label for="">Check in</label>
                            <%= f.date_field :start_date, class: "form-control", placeholder: "30-07-2021" %>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="">Check out</label>
                            <%= f.date_field :end_date, class: "form-control", placeholder: "30-09-2021" %>
                        </div>
                    </div>
                    <%= f.hidden_field :property_id, value: @properties.id %>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Price</td>
                                <td class="text-right">$<span><%= @properties.price %></span></td>
                            </tr>
                            <tr>
                                <td>Night(s)</td>
                                <td class="text-right">x<span id="total_nights"></span></td>
                            </tr>
                            <tr>
                                <td class="total">Total</td>
                                <td class="text-right">$<span id="total_amount"></span></td>
                            </tr>
                        </tbody>
                    </table>
                    <%= f.submit "Book Now", id: "button_book", class: "btn btn-primary" %>    
                    <% end %>
                <% else %>
                    <p>You can not book your own property</p>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
