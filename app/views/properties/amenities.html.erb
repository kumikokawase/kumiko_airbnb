<% provide(:title, @properties.id) %>
<div class="container">
    <div class = "row"> 
        <div class ="col-3 mt-4">
            <%= render 'leftbar' %>
        </div>

        <div class = "col-9">
            <div class = "card mt-4">
                <div class = "card-header">
                    Amenities 
                </div>
                <div class="card-body">
                    <div class = "container ">
                        <div class = "row">
                            <div class="col-6 mt-3">
                                <%= form_for @properties do |f| %>
                                <form>
                                <div class="form-group">
                                    <%= f.check_box :has_tv %> TV
                                </div>
                                <div class="form-group">
                                    <%= f.check_box :has_heater %> Heating
                                </div>
                                <div class="form-group">
                                    <%= f.check_box :has_aircon %> Air Conditioning
                                </div>
                                <div class="form-group">
                                    <%= f.check_box :has_kitchen %> Kitchen
                                </div>
                                <div class="form-group">
                                    <%= f.check_box :has_will %> Internet
                                </div>
                                
                                <div class="form-send">
                                    <%= f.submit "Save", class: "btn btn-info" %>
                                </div>
                                <% end %>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>